<% if current_user.good?(spot) %>
  <%= form_tag(favorite_spot_path(spot.id), method: :delete) do %>
    <%= hidden_field_tag :spot_id, spot.id %>
    <%= hidden_field_tag :type, 'Good' %>
    <%= submit_tag '(良かった！)解除', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_tag(favorite_spots_path) do %>
    <%= hidden_field_tag :place_id, spot.place_id %>
    <%= hidden_field_tag :type, 'Good' %>
    <%= submit_tag '良かった！', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>