<header>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Kuchikomi", (current_user ? current_user : root_path), class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <% if logged_in? %>
            <%= form_tag(spots_path(current_user), method: :get, class: 'form-inline') do %>
              <div class="form-group">
                <%= text_field_tag :keyword, @keyword, class: 'form-control input-sm', placeholder: "キーワードを入力" %>
              </div>
              <%= submit_tag '検索', class: 'btn btn-primary btn-sm' %>
            <% end %>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
                ランキング
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to '良かった！ランキング', rankings_good_path %></li>
                <li><%= link_to '気になる！ランキング', rankings_like_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "マイページ", user_path(current_user) %></li>
                <li><%= link_to "良かった！", goods_user_path(current_user) %></li>
                <li><%= link_to "気になる！", likes_user_path(current_user) %></li>
                <li><%= link_to "登録情報の修正", edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
              </ul>
            </li>
        </ul>
          <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to '新規登録', signup_path %></li>
            <li><%= link_to 'ログイン', login_path %></li>
          </ul>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>