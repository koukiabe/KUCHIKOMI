<% if current_user.ref?(review) %>
  <%= form_for(current_user.refs.find_by(review_id: review.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit '(参考になった！)解除', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.refs.build) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit '参考になった！', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>